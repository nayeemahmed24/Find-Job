@{
    ViewData["Title"] = "Create";
}
@model Post

<header>
    <nav>
        @Html.Partial("NavMenu", (string)@ViewBag.Role)
    </nav>
</header>

<h2 style="margin-left: 720px;margin-top: 100px ">Create Post</h2>
<div class="col-lg-12" style="margin-top: 110px">
    <form action="/Post/Create" method="post">
        
        <div class="col-lg-6" style="margin-left: 500px; padding: 7px">
            <label> Title </label>
            <input class="col-lg-6 input" style="margin-left: 56px;" asp-for="Title" type="text" name="title" value="" placeholder="Title" />
        </div>
        <div class="col-lg-6" style="margin-left: 500px; padding: 7px">
            <label> Content </label>
            <input type="text" class="col-lg-6" style="margin-left: 28px;" name="content" asp-for="Content"  value="" placeholder="Content" />
        </div>
        <div class="col-lg-6" style="margin-left: 750px; padding: 20px">
            <button type="submit">Post</button>
        </div>


    </form>
</div>

