
@{
    ViewData["Title"] = "Index";
}



<header>
    <nav>
        @Html.Partial("NavMenu", (string)@ViewBag.Role)
    </nav>
</header>

<div class="grid-container" style="margin-left: 300px"  id="messagesList">
    <script>
        var myself = @ViewBag.username;
    </script>
    @foreach (var message in ViewBag.Messeges)
    {
        @if (message.SenderUsername == ViewBag.username)
        {
            <div class="chat grid-item chat-my" >
                <div class="container-chat">
                    @* <h4 style="margin-top : 20px"><b>@post.Title</b></h4> *@
                    <p style="margin-top: 25px">@message.text</p>
                </div>
            </div>
            
        }
        else
        {
            <div class="chat grid-item chat-other" >
                <div class="container-chat">
                    @* <h4 style="margin-top : 20px"><b>@post.Title</b></h4> *@
                    <p style="margin-top: 25px">@message.text </p>
                </div>
            </div>
        }

    }
   
   



</div>
<div class="fixed col-12">
    
    <form method="post" style="width: 50%; margin-left: 210px; margin-top: 20px">
        
        <textarea placeholder="Write Here ..." id="messageInput" name="text"></textarea>
        <button type="submit" id="sendButton" class="btn btn-info" style="margin-left: 3px; margin-top: 10px; margin-bottom: 10px"> Send </button>
    </form>
    

</div>

<form>
